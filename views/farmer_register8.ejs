<%- include('partials/header.ejs') %>

<div class="container text-center">
    <div class="jumbotron">
        <h2>Farmer Registration Page!</h2>
    </div>
    <form action="/register/farmer/8/<%= pid %>" method="POST">
        <div class="container">
            <h3>Planning to cultivate any other medicinal plant in future:</h3>
                <div class="form-group">
                  <label for="plantname">Medicinal Plant Name</label>
                  <input type="text" class="form-control" id="plantname" name="name">
                </div>
                <div class="form-group ">
                    <label for="variety">Variety</label>
                    <input type="text" class="form-control" id="variety" name="variety">
                  </div>
                  <div class="form-group">
                    <label for="area">Plantation Area</label>
                    <input type="integer" class="form-control" id="area" name="area">
                    <small>(in acres)</small>
                  </div>
                  <div class="form-group">
                    <label for="seedsadd">Address from where you will procure seeds / tubers / grafting</label>
                    <input type="text" class="form-control" id="seedsadd" name="seedsadd">
                  </div>
                  <div class="form-group">
                    <label for="buyercontact">Buyer Contact Details/ Address</label>
                    <input type="text" class="form-control" id="buyercontact" name="buyercontact">
                  </div>
        </div>

          <a class="btn btn-primary">Save</a>
          <button class="btn btn-success">Next</button>
      </form>

</div>

<%- include('partials/footer.ejs') %>