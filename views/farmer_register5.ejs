<%- include('partials/header.ejs') %>

<div class="container text-center">
    <div class="jumbotron">
        <h2>Farmer Registration Page!</h2>
    </div>
    <form action="/register/farmer/5/<%= pid %>" method="POST">
        <div class="container">
            <h3>Buyer of your Medical Plants</h3>
                <div class="form-group">
                  <label for="buyername">Name of Vendor/pharmacy/ trader/ stockist / exporter</label>
                  <input type="text" class="form-control" id="buyername" name="name">
                </div>
                <div class="form-group ">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" id="address" name="address">
                  </div>
                  <div class="form-group">
                    <label for="monumber">Mobile Number</label>
                    <input type="integer" class="form-control" id="monumber" name="mobileno">
                  </div>
                  <div class="form-group">
                    <label for="email">Email ID</label>
                    <input type="email" class="form-control" id="email" name="email">
                  </div>
                </div>
          <a class="btn btn-primary">Save</a>
          <button class="btn btn-success">Next</button>
      </form>

</div>

