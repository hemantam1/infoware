<%- include('partials/header.ejs') %>

<div class="container text-center">
    <div class="jumbotron">
        <h2>Buyer Registration Page!</h2>
    </div>
    <form action="/register/buyer/6/<%=buyer.lab_id%>?_method=PUT" method="POST">
        <div class="container">
            <h3> Do you test your plant raw material in a laboratory after receiving it from supplier?  </h3>
            <div class="form-group form-check">
              <input type="checkbox" class="form-control" id="inhouse">
              <label for="inhouse">In House Laboratory Testing</label>
            </div>
            <div class="form-group form-check">
              <input type="checkbox" class="form-control" id="outhouse">
              <label for="outhouse">Outside Laboratory Testing :</label>
            </div>
            <p>if yes, please give details of Laboratory: </p>
            <div class="form-group">
              <label for="labname">Name</label>
              <input type="text" class="form-control" id="labname" name="labname" value="<%=buyer.labname%>">
            </div>
            <div class="form-group ">
                <label for="labaddress">Address</label>
                <input type="text" class="form-control" id="labaddress" name="address" value="<%=buyer.address%>">
              </div>
              <div class="form-group">
                <label for="labmonumber">Mobile Number</label>
                <input type="integer" class="form-control" id="labmonumber" name="mobileno" value="<%=buyer.mobileno%>">
              </div>
            </div>  
    <button class="btn btn-info">Save</button>
    <button type="submit" class="btn btn-success">Next</button>
  </form>
</div>

<%- include('partials/footer.ejs') %>