<%- include('partials/header.ejs') %>

<div class="container text-center">
    <div class="jumbotron">
        <h2>Buyer Registration Page!</h2>
    </div>
    <form method="POST" action="/register/buyer/11/<%=buyer.nb_id%>?_method=PUT"> 
            <div class="container">
            <h3>Any other Individual/Organization having business of medicinal plants in your region / area: </h3>
            <div class="form-group">
              <label for="bname">Name</label>
              <input type="text" class="form-control" id="bname" name="name" value="<%=buyer.name%>">
            </div>
            <div class="form-group ">
                <label for="baddress">Address</label>
                <input type="text" class="form-control" id="baddress" name="address" value="<%=buyer.address%>">
              </div>
              <div class="form-group">
                <label for="bmonumber">Mobile Number</label>
                <input type="integer" class="form-control" id="bmonumber" name="mobileno" value="<%=buyer.mobileno%>">
              </div>
              <div class="form-group">
                <label for="bpin">PIN Number</label>
                <input type="integer" class="form-control" id="bpin" name="pin" value="<%=buyer.pin%>">
              </div>
            </div>       
            <button class="btn btn-info">Save</button>
            <button type="submit" class="btn btn-success">Next</button>
    </form>
</div>

<%- include('partials/footer.ejs') %>